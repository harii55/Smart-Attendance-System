<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:foregroundTint="#3571EA"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_border"
            android:backgroundTint="#EBE9E9"
            android:foregroundTint="#3571EA"
            android:gravity="center"
            android:padding="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/alert"
                    android:layout_width="73dp"
                    android:layout_height="79dp"
                    android:src="@drawable/baseline_announcement_24"
                    tools:layout_editor_absoluteX="137dp"
                    tools:layout_editor_absoluteY="47dp" />

                <TextView
                    android:id="@+id/attendance_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Mark your DSA Attendance NOW!"
                    android:textColor="#000000"
                    android:textSize="22dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/attendanceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#3572EC"
                android:clickable="true"
                android:onClick="markAttendance"
          
                android:padding="14dp"
                android:text="Mark Attendance"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>